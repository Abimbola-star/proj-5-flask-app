pipeline {
    agent any

    environment {
        APP_NAME = 'flask-monitoring-dashboard'
        APP_VERSION = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test') {
            steps {
                sh 'pytest || echo "No tests found, continuing..."'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarQubeScanner'
                    withSonarQubeEnv('SonarQube') {
                        sh sh "sonar-scanner \
                           -Dsonar.projectKey=project_5 \
                           -Dsonar.sources=. \
                           -Dsonar.host.url=http://34.201.46.111:9000 \
                           "
                    }
                }
            }
        }

        stage('Deploy with Ansible') {
            steps {
                sshagent(['ansible']) {
                    sh '''
                        ansible-playbook flask_playbook.yml -i hosts.ini -vv
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
